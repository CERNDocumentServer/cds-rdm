@import "../mixins.less";
.ui.container {
  &.menu-background {
    background-color: rgba(255,255,255,0.9);
    border-bottom: 3px solid @brandColor;
    position: relative;
    z-index: 100;
    padding-left: 1em;
    padding-right: 1em;
  }

  .frontpage-header {
    height: calc((@homePageHeroHeight / 2));
    align-items: center;
    align-content: center;
    @media all and (max-width: @computerBreakpoint) {
      position: relative;
      top: 5em;
    }
  }

}

#communities-carousel {

  .ui.container.carousel {
    background-color: @white;

    .metadata-background-color {
      min-height: 19vh;

    }
  }
}

.theme.header.frontpage{
  .invenio-header-container {
    height: calc(@homePageHeroHeight - 3px);
  }
}

.cern-logo{
  display: flex;
  align-items: center;
}

.frontpage-main{
  &.browse{
    padding-top: 2em;
    padding-bottom: 2em;
    background-color: @lighterGray;
    .background-layer{
      position: absolute;
      width:100%;
      clip-path: polygon(0 0, 30% 0, 0 80%);
      .linear-gradient(-26deg, rgb(217, 218, 220) 0%, rgba(255, 255, 255, 0) 95%);
    }
  }
}

